@model Prectice1.Models.cart



<div>

    <form id="myForm">
        @Html.HiddenFor(m => m.CartId)
        <div class="form-group">
            @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", @placeholder = "Quantity" })
        </div>


        <div class="form-group">
            <a href="#" id="btnSubmit" class="btn btn-success btn-block">
               Create
            </a>
        </div>

    </form>



</div>

<script>

    $(document).ready(function () {

        $("#btnSubmit").click(function () {

          @*  $("#loaderDiv").show();*@

            var myformdata = $("#myForm").serialize();

            $.ajax({

                type: "Post",
                url: '@Url.Action("Create", "Cart")',
                data: myformdata,
                success: function (data) {
                   // $("#loaderDiv").hide();
                   // $("#myModal").modal("hide");
                    //withot window location href page is not getting refreshed on its own
                    location.reload();

                }

            })
        })

    })


</script>
