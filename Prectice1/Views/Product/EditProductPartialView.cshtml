@model Prectice1.Models.Product





<div>

    <form id="myForm">
        @Html.HiddenFor(m => m.ProductID)
        <div class="form-group">
            @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control", @placeholder = "ProductName" })
        </div>


        <div class="form-group">
            @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", @placeholder = "Quantity " })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @placeholder = "Price" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @placeholder = "Description" })
        </div>
        <div class="form-group">
            <a href="#" id="btnSubmit" class="btn btn-success btn-block">

                update
            </a>
        </div>

    </form>



</div>



<script>

    $(document).ready(function () {

        $("#btnSubmit").click(function () {

          @*  $("#loaderDiv").show();*@

            var myformdata = $("#myForm").serialize();

            $.ajax({

                type: "Post",
                url: '@Url.Action("Edit", "Product")',
                data: myformdata,
                success: function (data) {
                   // $("#loaderDiv").hide();
                   // $("#myModal").modal("hide");
                    //withot window location href page is not getting refreshed on its own
                    location.reload();

                }

            })
        })

    })


</script>
