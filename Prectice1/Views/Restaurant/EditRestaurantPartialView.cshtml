            $.ajax({

                type: "Post",
                url: '@Url.Action("Edit", "Restaurant")',
                data: myformdata,
                success: function (data) {
                   // $("#loaderDiv").hide();
                   // $("#myModal").modal("hide");
                    //withot window location href page is not getting refreshed on its own
                    location.reload();

                }

            })
        })

