@model Prectice1.CustomModels.FoodCategoryViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm( "Create", "RestaurantCategory", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>FoodCategory</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class=“form-group”>
        @Html.LabelFor(m => m.CategoryName)
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
    </div>

    <div class=“form-group”>
        @Html.LabelFor(m => m.RestaurantID)
        @Html.TextBoxFor(m => m.RestaurantID, new { @class = "form-control" })
    </div>
    <div class=“form-group”>
        @Html.LabelFor(m => m.ImageUrl)
        @*  @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control" })*@

        <input type="file" id="ImageFile" name="ImageFile" class="btn btn-default">

    </div>
    <td></td>
    <div class=“form-group”>
        @Html.LabelFor(m => m.Date)
        <input type="date" id="start" name="trip-start"
               value="2018-07-22"
               min="2018-01-01" max="2018-12-31">
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <td> </td>
            <input type="submit" value="Next" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
