@model IEnumerable<Prectice1.Models.FoodCategory>

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<p>
    
</p>
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantInfo.RestaurantName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantInfo.RestaurantName)
        </td>
        <td>
            <a href='@Url.Action("Delete", new {id = @item.RestaurantID})' class="btn btn-danger" onclick="return confirm ('Are you sure! you want to delete ?');">
                <i class="glyphicon glyphicon-trash"></i>
            </a>|
            <a href='@Url.Action("Details","Product", new {id = @item.RestaurantID})' class="btn btn-primary" onclick="return confirm ('Are you sure want to redirect to Product?');">
                Product Details
            </a>|
            <a href='@Url.Action("Create","RestaurantCategory", new {id = @item.RestaurantID})' class="btn btn-primary" onclick="return confirm ('Are you sure! You want to redirect to Create Category?');">
                Create Category
            </a>
        </td>
    </tr>
}

</table>
