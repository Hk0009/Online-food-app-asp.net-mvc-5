@model IEnumerable<Prectice1.Models.Product>

@{
    ViewBag.Title = "RestaurantProduct";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<h2>RestaurantProduct</h2>
<h2>After Adding Products to cart Click on orders</h2>
<p>
    <a href='@Url.Action("Create", "Order")' class="btn btn-danger">Order</a>
</p>
<h2>First Add Products To Cart </h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
       @* <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>*@

        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FoodCategory.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantInfo.RestaurantName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            @*<td>
            <img src="@item.ImageUrl" width="50" height="60">
        </td>*@

            <td>
                @Html.DisplayFor(modelItem => item.FoodCategory.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestaurantInfo.RestaurantName)
            </td>
            <td>
                <a href='@Url.Action("Create", "Cart", new {id=@item.CategoryId,pid=@item.ProductID})' class="btn btn-Sucess" onClick="onClick()">Add To cart</a>

            </td>
            <td><p>Clicks: <a id="clicks">0</a></p></td>
        </tr>
    }


</table>
<script>
    var clicks = 0;

    function onClick() {
        clicks += 1;
        document.getElementById("clicks").innerHTML = clicks;
    };
    </script>
